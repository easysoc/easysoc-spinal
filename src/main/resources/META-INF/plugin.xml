<idea-plugin url="https://www.easysoc.org">
    <id>org.easysoc.spinal</id>
    <name>EasySoC Spinal</name>
    <vendor url="https://www.easysoc.org">EasySoC</vendor>
    <change-notes><![CDATA[
        <ul>
            <li>Create SpinalHDL Component from fileTemplates</li>
        </ul>
    ]]></change-notes>
    <description><![CDATA[
    Create new SpinalHDL project based on ProjectWizard and Templates.<br>
    See <a href="https://github.com/SpinalHDL/SpinalHDL">https://github.com/SpinalHDL/SpinalHDL</a> for more information.
    ]]></description>

    <!-- please see http://www.jetbrains.org/intellij/sdk/docs/basics/getting_started/plugin_compatibility.html
         on how to target different products -->
    <depends>com.intellij.java</depends>
    <depends>org.intellij.scala</depends>
    <depends>com.intellij.modules.platform</depends>

    <extensions defaultExtensionNs="com.intellij">
        <!-- Add your extensions here -->
        <moduleType id="SPINAL_MODULE" implementationClass="org.easysoc.plugins.spinal.module.SpinalModuleType"/>
        <projectTemplate projectType="SPINAL_MODULE" templatePath="projectTemplates/Empty_SpinalHDL_Project.zip"/>
        <projectTemplate projectType="SPINAL_MODULE" templatePath="projectTemplates/Counter_Example_With_SpinalSim.zip"/>
    </extensions>

    <actions>
        <!-- Add your actions here -->
        <action id="CreateSpinalComponentAction" class="org.easysoc.plugins.spinal.actions.CreateSpinalComponentAction">
            <add-to-group group-id="NewGroup" anchor="first"/>
        </action>
    </actions>
    <projectListeners>
        <listener class="org.easysoc.plugins.spinal.listeners.ProjectListener" topic="com.intellij.openapi.project.ProjectManagerListener"/>
    </projectListeners>
</idea-plugin>